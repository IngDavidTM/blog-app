<section>
  <div class="user-card">
    <%= image_tag (@user.photo) %>
    <div>
      <h2><%=@user.name%></h2>
      <h3>Number of posts: <%=@user.posts_counter%></h3>
    </div>
  </div>
  <% @user.posts.each_with_index do |post, i| %>
    <%= link_to user_post_url(id: post.id) do %>
    <div class="post-card">
      <h3>Post #<%=i+1%> <%=post.title%></h3>
      <p><%=post.text%></p>
      <p class="comments-likes">Comments: <%=post.comments_counter%>, Likes: <%=post.likes_counter%></p>
    </div>
    <% end %>
    <div class="post-comment">
      <%comments = post.recent_comments%>
      <% comments.each_with_index do |comment, ind| %>
          <p><%=comment.author.name%>: <%=comment.text%></p>
      <% end %>
    </div>
  <% end %>
  <button>
    <%= link_to 'Pagination', user_path(@user)%>
  </button>
</section>