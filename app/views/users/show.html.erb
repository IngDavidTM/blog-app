<section>
  <div class="user-card">
    <img src="<%=@user.photo%>" alt="<%=@user.name%>'s photo"/>
    <div>
      <h2><%=@user.name%></h2>
      <h3>Number of posts: <%=@user.posts_counter%></h3>
    </div>
  </div>
  <div class="bio">
    <h3>Bio</h3>
    <p><%=@user.bio%></p>
  </div>
  <% @posts.each_with_index do |post, i| %>
    <%if i < 3%>
      <div class="post-card">
        <h3>Post #<%=i+1%></h3>
        <p><%=post.text%></p>
        <p class="comments-likes">Comments: <%=post.comments_counter%>, Likes: <%=post.likes_counter%></p>
      </div>
    <% end %>
  <% end %>
  <button>
    <%= link_to 'See all posts', user_posts_path(@user)%>
  </button>
</section>
