<% @users.each do |user| %>
  <%= link_to user_path(user) do %>
    <div class="user-card">
      <img src="<%=user.photo%>" alt="<%=user.name%>'s photo"/>
      <div>
        <h2><%=user.name%></h2>
        <h3>Number of posts: <%=user.posts_counter%></h3>
      </div>
    </div>
  <% end %>
<% end %>
<button><%=link_to "New Post", new_post_path %></button>
